        /*******************依照HASH來判斷顯示哪個頁面***************************/
        function ParseNowPageState() {
            var hash = window.location.hash.replace('#', '');
            var queryArray = hash.split('&');
            var container = $('#IndexPage');

            var Param = {};
            if (queryArray) {
                $.each(queryArray, function (index, value) {
                    var paramArray = value.split('=');
                    if (paramArray.length == 2) {
                        Param[paramArray[0]] = paramArray[1];
                    }
                });
            };


            if (Param.CIndustry) {
                LoadListedCompanyByIndustry(container, Param);
            }
            else {
                LoadAllIndustry(container);

            }


        };
          /****************************HashChange事件************************************************/
        $(window).on('hashchange', function () {
            ParseNowPageState();
        });
        });

        /****************************取得所有產業************************************************/
      function LoadAllIndustry(container) {
          $.ajax({
            url: '@Url.Action("GetAllStockCategory")',
            type: 'POST',
            contentType:'application/json',
            success: function (data) {
                container.empty()
                if (Array.isArray(data)) {

                    $.each(data, function (index,value) {
                        var Tag_a = $('<a class="CIndustryItem" >').html(value);
                        Tag_a.attr('href', '#CIndustry=' + value);
                        Tag_a.appendTo(container);
                    });
                }
            }
            });
      }

      /*****************************透過取得特定產業下之上市公司資料*************************/


      function LoadListedCompanyByIndustry(container, Param) {
          container.empty();



          var KaTable = $('<table class="KaTable table">')
          KaTable.SetTable({
              sourcelink: '@Url.Action("TestStock")',
              columnslist:
              [
                  { field: 'CID', title: '公司代號', template: '<span class=ggg>#title</span>' },
                  { field: 'CName', title: '公司名稱' },
                  { field: 'Bid', title: '買進', sort : true },
                  { field: 'Ask', title: '賣出', sort: true  },
                  {
                      field: 'Change', title: '漲跌', sort: true , template: function (data) {
                          var span = $('<sapn>');
                          if (parseFloat(data) < 0) {
                              span.addClass('green')
                          } else if (parseFloat(data) > 0) {
                              span.addClass('red')
                          }
                          span.html(data);
                          return span;
                      }
                  },
                  { field: 'Volume', title: '成交量/張', sort: true  },
              ],

          });



          KaTable.SetPageSize(10);
          KaTable.Read(Param, Param.page, function (source) {
              console.log(source)
          });

          $('#btnaaa').on('click', function () {
              KaTable.Sort('Bid');
            });

          KaTable.Sort('Bid');
          KaTable.appendTo(container);


      }

    })(jQuery);


